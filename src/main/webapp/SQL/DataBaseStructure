# 로그인 DB
create table ADMINMEMBER
(
    ID       varchar(10) not null
        primary key,
    PASSWORD varchar(10) not null,
    NAME     varchar(20) null
);

# 제품 DB
create table PRODUCT
(
    NO              int auto_increment
        primary key,
    PRODUCTNAME     varchar(50)                        not null,
    PRODUCTLOCATION varchar(50)                        not null,
    PRODUCTPRICE    int                                null,
    PRODUCTCATEGORY varchar(50)                        null,
    PRODUCTFILENAME varchar(100)                       null,
    ID              varchar(10)                        null,
    TODAY           datetime default CURRENT_TIMESTAMP null
);

# 장바구니 DB
create table BASKET
(
    BASKETNO int auto_increment primary key,
    USERID varchar(10),
    PRODUCTNO int,
    PRODUCTCOUNT int default 1
);

#댓글 DB
create table COMMENT(
    NO int(10) not null auto_increment primary key ,
    USER_ID int(10) not null,
    CONTENTS varchar(500) not null,
    REGDATE datetime default now(),
    REF int(10) not null,
    STEP int(10) not null,
    LEV int(10) not null,
    PNUM int(10) not null,
    REPLY int(10) not null,
    BOARD_NO int(10) not null
);

#댓글 DB2
create table COMMENT2(
                        NO int(10) not null auto_increment primary key ,
                        USER_ID varchar(30) not null,
                        CONTENTS varchar(500) not null,
                        REGDATE datetime default now(),
                        BOARD_NO int(10) not null
);

#댓글 real final
create table COMMENTFINAL(
        NO int(10) not null auto_increment primary key, # 이거는 댓글 번호
        BOARD_NO int(10) not null, # 이거는 해당 게시글의 번호
        PARENT_NO int(10) default 0, # 이거는 부모 댓글의 번호 -> 맨위에서 등록 누르면 기본값은 0 이다
        USER_ID varchar(30) not null, # 로그인한 아이디임
        CONTENTS varchar(500) not null, # 댓글 내용
        REGDATE datetime default now() # 댓글 작성 시간.
);

