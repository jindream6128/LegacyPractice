<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.dto.commentMapper">

  <insert id="insertcomment" parameterType="comment">
    insert into COMMENT2(USER_ID,CONTENTS,BOARD_NO)
    values (#{USER_ID}, #{CONTENTS}, #{BOARD_NO});
  </insert>

  <select id="getComment" parameterType="java.lang.Integer" resultType="comment">
    select * from COMMENT2 WHERE BOARD_NO= #{board_no}
  </select>

</mapper>








